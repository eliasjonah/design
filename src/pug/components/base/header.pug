mixin header(headerMods, currentUrl)
  header.header(class=headerMods)
    .container-xl
      .header__inner
        a(href="#").logo Logo
        .header__nav
          a(href="#").header__nav-item ОТЕЛИ
          a(href="#").header__nav-item РЕСТОРАНЫ
          a(href="#").header__nav-item ЧАСТНЫЕ ИНТЕРЬЕРЫ
          a(href="#").header__nav-item КАТАЛОГ
        .header__aside
          a(href="#").header__offer ОСТАВИТЬ ЗАЯВКУ
          .header__burger
            .header__burger-line
            .header__burger-line
    .header__popup
      .header__links
        a(href="#").header__link Каталог
          .header__line —
        a(href="#").header__link Рестораны
          .header__line —
        a(href="#").header__link Отели
        a(href="#").header__link Офисы
          .header__line —
        a(href="#").header__link Частные интерьеры
        a(href="#").header__link О компании
          .header__line —
        a(href="#").header__link Контакты