mixin draft-section()

  section.draft#section2
    .draft__slider
      .swiper-wrapper.draft__wrapper
        .swiper-slide.draft__slide
          .draft__content
            .draft__header Ashford
            .draft__subheader Санкт-Петербург
          +img('content', 'flat1', 'jpg')
        .swiper-slide.draft__slide
          .draft__content
            .draft__header Mandapa
            .draft__subheader Лондон
          +img('content', 'flat2', 'jpg')
        .swiper-slide.draft__slide
          .draft__content
            .draft__header The Lowell
            .draft__subheader Нью-Йорк
          +img('content', 'flat3', 'jpg')
        .swiper-slide.draft__slide
          .draft__content
            .draft__header Raffles
            .draft__subheader Дубаи
          +img('content', 'flat4', 'jpg')
      .swiper-pagination.swiper-pagination-fraction.swiper-pagination-horizontal.draft__pagination
      .draft__buttons
        button.draft__btn.draft__btn--prev
          +icn('icn-arrow', 20, 28).draft__icn
        button.draft__btn.draft__btn--next
          +icn('icn-arrow', 20, 28).draft__icn